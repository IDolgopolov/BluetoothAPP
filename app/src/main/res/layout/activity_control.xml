<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e017c">

    <Button
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/button_drive_control"
        android:background="@drawable/button_control_circle" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:minWidth="70dp"
        android:id="@+id/view_result_touch"
        android:layout_marginEnd="90dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="low hit"
        android:id="@+id/b_low_hit"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="high hit"
        android:id="@+id/b_high_hit"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>